carousel(current-index="selected" interval="4000")
	slide(ng-repeat="article in articles | limitTo: 3" active="article.active")
		img(ng-src="/images/uploads/{{article.image}}", alt="")
		.caption
			h3
				a(href="#!/article/{{article._id}}") {{article.header | limitTo: 31}}
			p Author: {{article.author}}
.top-poster
	h3 Top authors

.col-sm-3.mp-ab-wrap(ng-repeat="article in articles | limitTo: 16")
	.mp-article-block
		.mp-ab-img
			img(ng-src="/images/uploads/{{article.image}}", alt="")
		.mp-ab-header
			h3
				a(href="#!/article/{{article._id}}") {{article.header | limitTo: 61}}
		.other-article-data
			ul
				li
					p {{article.author}}
				li
					p {{article.publishDate}}
